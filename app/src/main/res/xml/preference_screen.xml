<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="One Rep Maxes"
        app:icon="@drawable/ic_fitness_center_black_24dp">

        <EditTextPreference
            app:key="maxSquat"
            app:title="Squat"/>

        <EditTextPreference
            app:key="maxBench"
            app:title="Bench"
            />

        <EditTextPreference
            app:key="maxDeadlift"
            app:title="Deadlift"
            />
    </PreferenceCategory>

    <PreferenceCategory
        app:title="Program Date">

        <Preference
            app:key="programStartDate"
            app:title="Program start date"
            />

    </PreferenceCategory>

    <PreferenceCategory
        app:title="App Data">

        <Preference
            app:key="appVersion"
            app:title="Application version"
            />

    </PreferenceCategory>



</PreferenceScreen>